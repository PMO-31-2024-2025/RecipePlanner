<Page x:Class="UserInterface.Views.FiveSurveyWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserInterface.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FiveSurveyWindow" Style="{StaticResource PageResource}">

    <Grid>
        <Border Width="600" Height="400" Background="White" CornerRadius="50">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="0"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="What is your height?" 
                           HorizontalAlignment="Center" 
                           FontWeight="Bold" Margin="0 70 0 0"
                           FontSize="32"/>
                <TextBox Width="100" 
                         Background="LightGoldenrodYellow"
                         Margin="0 10 0 0"
                         Height="30" FontSize="18"
                         x:Name="HeightTextBox"/>

                <TextBlock Text="What is your weight?"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="24"
                           Margin="0 10 0 0"/>

                <TextBox Width="100"
                         Background="LightGoldenrodYellow"
                         Margin="0 10 0 0"
                         Height="30"
                         FontSize="18"
                         x:Name="CurrentWeightTextBox"/>
                
                <TextBlock Text="What is your desired weight?"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="24"
                           Margin="0 10 0 0"/>
                <TextBox Width="100"
                         Background="LightGoldenrodYellow"
                         Margin="0 10 0 0"
                         Height="30"
                         FontSize="18"
                         x:Name="DesiredWeightTextBox"/>
                
                <Button Width="100" Height="50" 
                        Content="Submit" FontSize="20" 
                        Margin="15" Click="Button_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
