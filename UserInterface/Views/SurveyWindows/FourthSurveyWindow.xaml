<Page x:Class="UserInterface.Views.FourthSurveyWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserInterface.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FourthSurveyWindow" Style="{StaticResource PageResource}">

    <Grid>
        <Border Width="400" Height="300" Background="White" CornerRadius="50">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="0"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="What is your name?" HorizontalAlignment="Center" Margin="0 70 0 0" FontWeight="Bold"></TextBlock>
                <TextBox Width="100" 
                         Background="LightGoldenrodYellow" 
                         Margin="0 10 0 0"></TextBox>

                <TextBlock Text="How old are you?" 
                           HorizontalAlignment="Center" 
                           FontWeight="Bold" 
                           Margin=" 0 10 0 0"></TextBlock>
                <TextBox Width="100" 
                         Background="LightGoldenrodYellow"
                         Margin=" 0 10 0 0"></TextBox>
                <!--<Image Source="G:\RecipePlanner\UserInterface\Images\SurveyWindows\calendar.png"
                       Width="20" Margin="0 -22 -150 0"></Image>-->

                <TextBlock Text="What is your gender?" 
                           HorizontalAlignment="Center"
                           FontWeight="Bold" 
                           Margin ="0 10 0 0"></TextBlock>
                <RadioButton Content="Male" HorizontalAlignment="Center" 
                             Margin="0 15 105 0"></RadioButton>
                <RadioButton Content="Female" HorizontalAlignment="Center"
                             Margin="0 -15 -85 0"></RadioButton>

                <Button Width="60" Height="20" Content="Back" 
                        Background="LightGray" 
                        Margin="0 10 80 0"></Button>
                <Button Width="60" Height="20"
                        Content="Next"
                        Background="LightGray"
                        Margin="0 -19.5 -80 0"></Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>
