<Page x:Class="UserInterface.Views.FirstSurveyWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserInterface.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FirstSurveyWindow" Style="{StaticResource PageResource}">

    <Grid>
        <Border Background="White" Width="600" Height="400"
                CornerRadius="50">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock HorizontalAlignment="Center"
                           Margin="0 60 0 25" 
                           FontWeight="Bold" 
                           Text="What is your goal?"
                           FontSize="32"/>

                <Button Background="LightGray"
                        Width="170" 
                        Height="35" 
                        Content="Lose weight"
                        FontSize="18"
                        x:Name="LoseWeightButton" Click="LoseWeightButton_Click"/>
                
                <Button Background="LightGray"
                        Width="170" Height="35"
                        Margin="0 20 0 0" 
                        Content="Gain weight"
                        FontSize="18"
                        x:Name="GainWeightButton" Click="GainWeightButton_Click"/>
                
                <Button Background="LightGray" Width="170"
                        Height="35" Margin="0 20 0 0" 
                        Content="Maintain the weight"
                        FontSize="18"
                        x:Name="MaintainWeightButton" Click="MaintainWeightButton_Click"/>

                <Button Background="LightGray"
                        Width="80" Height="35" 
                        Content="Next" Margin="40"
                        FontSize="18"
                        x:Name="NextButton" Click="NextButton_Click"/>
            </StackPanel>
            
        </Border>
    </Grid>
</Page>
