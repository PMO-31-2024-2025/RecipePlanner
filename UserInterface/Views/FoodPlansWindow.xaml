<UserControl x:Class="UserInterface.Views.FoodPlansWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserInterface.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Left side-->
        <StackPanel Grid.Column="0">
            <Button Content="Операція 4" Margin="0, 0, 0, 0" 
                Style="{StaticResource SecondaryButtonStyle}"/>

            <Button Content="Операція 5" Margin="0, 10, 0, 0"
                Style="{StaticResource SecondaryButtonStyle}"/>

            <Button Content="Операція 6" Margin="0, 10, 0, 0"
                Style="{StaticResource SecondaryButtonStyle}"/>
        </StackPanel>

        <!--Right Side-->
        <Grid Grid.Column="1" Margin="0, 0">
            <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="Food Plans Window"
                   FontSize="40"/>

        </Grid>
    </Grid>
</UserControl>
