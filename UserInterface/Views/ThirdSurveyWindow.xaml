<Page x:Class="UserInterface.Views.ThirdSurveyWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserInterface.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ThirdSurveyWindow" Style="{StaticResource PageResource}">

    <Grid>
        <Border Background="White" Width="400" Height="300">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="0"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="What kind of lifestyle do you lead?" HorizontalAlignment="Center" Margin="0 70 0 0" FontWeight="Bold"></TextBlock>

                <Button Background="LightGray" Width="120" Height="20" Content="Not very active" Margin="0 10 0 0"></Button>
                <Button Background="LightGray" Width="120" Height="20" Content="Inactive" Margin="0 10 0 0"></Button>
                <Button Background="LightGray" Width="120" Height="20" Content="Active" Margin="0 10 0 0"></Button>
                <Button Background="LightGray" Width="120" Height="20" Content="Very active" Margin="0 10 0 0"></Button>
                <Button Background="LightGray" Width="50" Height="20" Content="Back" Margin="0 20 150 0 "></Button>
                <Button Background="LightGray" Width="50" Height="20" Content="Next" Margin="0 -19.5 -150 0"></Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>
